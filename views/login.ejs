<html>
    <style>
        .main{
            display: flex;
            justify-content: center;
            justify-items: center;
        }
        .submain{
            width: 500px;
            height: 350px;
            margin-top: 130px;
            padding: 20px;
            background: #b2bec3;
            border-radius: 30px;
        }
        #passeye{
            display: inline;
            position: relative;
            left: 385px;
            top: -51px;
            font-size: 25px;
          }
          .pad{
              margin: 10px;
              padding: 10px;
          }
          .wh{
              font-size: 130px;
              margin: auto;
              width: 200px;
              height: 50px;
          }
          .signup{
            font-size: 40px;
            margin-bottom: 10px; 
          }
    </style>
    <head>
        <title>Login Here</title>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>
    <script src="/javascripts/checks.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">    
</head>
    <body>
        <div class="main">
            <div class="submain">
                <h2 class='signup'>Log In</h2>
                <form action="/assignment/login" id="formlogin" method="post">
                <div class="row pad">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input class="input" id="luid" type="text" name="uid" placeholder="Scholar Number" required>
                              <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </p>
                          </div>
                    </div>
                    <div class="row pad">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input class="input" id="pass" type="password" name="pass" placeholder="Password" required>
                              <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                              </span>
                            </p>
                          </div>
                          <label for="p" id="passeye">&#128065;</label>
                          <span id="p"></span>
                    </div>
                <div class="row">
                    <div class="col">

                        <div class="field">
                            <!-- <button id="loginbtn" class="button is-info wh" name="checkpass">Log In</button> -->
                            <!-- <input type="text" id="checkpass" name="checkpass" style="display:none;"> -->
                            <input id="loginbtn" type="submit" value="Log In" class="button is-info wh">
                        </div>
                    </div>
                    <div class="col">

                        <div class="field" id="use">
                            <button id="signupbtn" type="button" class="button is-info wh">Sign Up</button>
                        </div>
                    </div>
                    <div class="col pad">
                        <label for="forgot" id="forgotlable">Forgot Password ?</label>
                        <h3 id="forgot"></h3>
                    </div>
                </div>
                    </form>
                    <%if(status==false){%>
                        <div class="row" style="color: red;">
                           <%=msg%>
                        </div>
                        
                        <%}%>
                </div>
        </div>
        
        </body>
</html>