<html>
    <head>
    <title> Add Assignment </title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>
    <script src="/javascripts/checks.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">    
</head>
    <body>
        <form action="/assignment/add" method="post" enctype="multipart/form-data">
        <div class="main">
            <div class="submain">
                <h2 class='signup'>Add Assignemnt</h2>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input" name="aname" id="fname" type="text" placeholder="Assignment Name">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                    <div class="row pad">
                    </div>
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input" type="text" name="id" id="aid" placeholder="Assignment Id">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required readonly class="input" type="text" name="fname" placeholder="Faculty Name" value="<%=aname%>">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                </div>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input"  name="enddate" type="date">
                              <span class="icon is-small is-left">
                                Last Date
                              </span>
                            </p>
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input"  type="file" name="paper">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                </div>
                    <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <input id="submitbtn" type="submit" value="Create" class="btn btn-outline-info">
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <input type="reset" value="Reset" class="btn btn-outline-danger">
                    </div>
                    </div>
                </div>
            <%if(s!=true){%>
                <div style="color: red;">
                    <%=msg%>
                </div><%}%>
            </div>
        </div>
    </form>
    </body>
</html>