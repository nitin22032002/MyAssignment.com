<html>
<head>
    <title>Home Page</title>
    <style>
        .main{
            display: flex;
            position:fixed;
            border: 2px solid grey;
            background-color: black;
        border-radius: 20px;
        height: 67px;
        width: 99%;
    }
    .select{
        padding: 12px;
        text-align: center;
        margin: 41px;
        width: 218px;
        height: 42px;
        font-size: 23px;
        font-style: oblique;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
</head>
<body>

    <div class="main">
        <div class="row">
        <!-- <div class="col">
            <a class="select" href="/assignment/?a=<%=id%>">Home</a>
        </div> -->
        
        <%if(id!=undefined){%>
            <div class="col">
                <a class="select" href="/assignment/submitassignment?a=<%=id%>">Assignment</a>
            </div>
            <div class="col">
                <a class="select" href="/assignment/profile?a=<%=id%>">Profile</a>
            </div>
            <div class="col">
                <a class="select" href="/assignment/userlogout">Logout</a>
            </div><%}
                
                else{%>
                    <div class="col">
                        <a class="select" href="/assignment/Login">Assignment</a>
                    </div>
                    <div class="col">
                        <a class="select" href="/assignment/Login">Profile</a>
                    </div>
                    <div class="col">
                        <a class="select" href="/assignment/Login">Login/Signup</a>
                    </div>
                        <%}%>
                <%var adate=new Date()
                adate=adate.getDate()+"/"+adate.getMonth()+"/"+adate.getFullYear()
                %>
                <div class="col">
                    <h1><%=adate%></h1>
                </div>
        </div>
        </div>
                     <%   if(id!=undefined){%>
                            <br>
                        <br>
                        <br>
                        <table class="table" style="width: 1300px; margin:20px;">
                            <thead>
                              <tr>
                                <th scope="col">Assignment Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">End Date</th>
                                <th scope="col">Submmision Date</th>
                                <th scope="col">faculty</th>
                                <th scope="col">Marks</th>
                                <th scope="col">Your Response</th>
                                <th scope="col">Assignment</th>
                                <th>Status</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% data.map((item,index)=>{
                                    if(item.name!=undefined){
                                    %>
                                    
                                      <tr>
                                          <%if(item.marks==0){
                                              var p="Not Given Yet"
                                          }
                                          else{
                                              p=item.marks
                                          }%>
                                          <th scope="row">
                                              <%=item.assignmentid%>
                                          </th>
                                          <td>
                                              <%=item.name%>
                                          </td>
                                          <td>
                                              <%=item.enddate%>
                                          </td>
                                          <td>
                                              <%=item.dateofsubmmision%>
                                          </td>
                                          <td>
                                              <%=item.faculty%>
                                          </td>
                                          <td>
                                              <%=p%>
                                          </td>
                                          <td>
                                              <a href="/images/<%=item.picture%>"><%=item.picture%></a>
                                            </td>
                                          <td>
                                            <a href="/images/<%=item.ass%>"><%=item.ass%></a>
                                          </td>
    
                                          <td>Submitted</td>
                                      </tr>
                                  <%}})%>
          
                            </tbody>
                          </table>        

                <%}else{%>
                    <img src="/images/wall.jpg" style="width: 1349px; height:657px;"><%}%>
                
</body>
</html>