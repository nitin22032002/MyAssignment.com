<html>
    <head>
    <title> Sign Up </title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>
    <script src="/javascripts/checks.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">    
</head>
    <body>
        <form action="/assignment/signup" method="post">
        <div class="main">
            <div class="submain">
                <h2 class='signup'>Sign Up</h2>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input" name="firstname" id="fname" type="text" placeholder="First Name">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input" type="text" name="lastname" placeholder="Last Name">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                </div>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input" id="uid" name="uid" type="text" placeholder="Scholar Number">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input"  type="text" name="branch" placeholder="Branch">
                              <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                              </span>
                            </p>
                          </div>
                    </div>
                </div>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input" id="pass" type="password" name="passworduser" placeholder="Password">
                              <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                              </span>
                            </p>
                          </div>
                          <label for="p" id="passeye">&#128065;</label>
                          <span id="p"></span>
                        </div>
                        <div class="col">
                          <div class="field">
                            <p class="control has-icons-left">
                              <input required class="input" id="cpass" type="password" name="cpassworduser" placeholder="Confirm Password">
                              <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                              </span>
                            </p>
                          </div>
                          <label for="c" id="cpasseye">&#128065;</label>
                          <span id="c"></span>
                        </div>
                      </div>
                      <div class="row pad">
                        <div class="col">
                        <div class="field">
                            <label class="checkbox">
                                <input required id="robot" type="checkbox" name="checkrobot">
                                I am not a Robot
                              </label>
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <label class="checkbox">
                                <input  required id="terms" type="checkbox" name="checkterms">
                                I agree to the <a href="/authentication/terms">terms and conditions</a>
                              </label>
                    </div>
                </div>
                <div class="row pad">
                    <div class="col">
                        <div class="field">
                            <input id="submitbtn" type="submit" value="Sign Up" class="btn btn-outline-info">
                          </div>
                    </div>
                    <div class="col">
                        <div class="field">
                            <input type="reset" value="Reset" class="btn btn-outline-danger">
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    </body>
</html>